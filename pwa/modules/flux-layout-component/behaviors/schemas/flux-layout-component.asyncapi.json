{
  "component": "flux-layout-component",
  "reactsOn": {
    "initialize": {
      "address": "flux-layout-component/initialize",
      "operationId": "initialize",
      "payload": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "replyTo": "{$name}/initialized"
    },
    "onInitialized": {
      "address": "{$name}/initialized",
      "operationId": "defineCustomHtmlElement",
      "payload": {},
      "replyTo": "{$name}/customHtmlElementDefined"
    },
    "onConnected": {
      "address": "{$name}/connected",
      "operationId": "create",
      "payload": {
        "type": "object",
        "properties": {
          "tagName": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      },
      "replyTo": "flux-layout-component/created"
    },
    "onFetched": {
      "address": "{$name}/repository/{$slot}/fetched",
      "operationId": "replaceSlotData",
      "payload": {
        "type": "object",
        "properties": {
          "items": {
            "type": "array"
          }
        }
      },
      "replyTo": "{$name}/slotDataReplaced"
    }
  }
}